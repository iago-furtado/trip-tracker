<!-- views/private/weather.hbs -->

<div class="text-center">
  <div class="container mt-5">
    <h2>{{title}}</h2>

    <form action="/private/weather" method="get">
      <div class="mb-3">
        <label for="cityInput" class="form-label">Enter City:</label>
        <input type="text" class="form-control" id="cityInput" name="city" required>
      </div>
      <button type="submit" class="btn btn-primary mb-3">Get Weather</button>
    </form>

    <div class="card mt-3">
      <div class="card-body">
        <h3>{{city}} Weather</h3>
        <p>Temperature: {{temperature}}Â°C</p>
        <p>Weather Description: {{weatherDescription}}</p>
        <p>Humidity: {{humidity}}%</p>
        <p>Wind Speed: {{windSpeed}} m/s</p>
      </div>
    </div>
  </div>
</div>